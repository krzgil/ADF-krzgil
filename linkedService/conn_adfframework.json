{
	"name": "conn_adfframework",
	"type": "Microsoft.DataFactory/factories/linkedservices",
	"properties": {
		"annotations": [],
		"type": "AzureSqlDatabase",
		"description": "Linked service description - connection to Azure SQL framework db",
		"parameters": {
			"par_secret_name": {
				"type": "String"
			},
			"par_sql_server_name": {
				"type": "String"
			},
			"par_framework_db_name": {
				"type": "String"
			},
			"KeyVaultService": {
				"type": "String"
			}
		},
		"typeProperties": {
			"connectionString": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=@{linkedService().par_sql_server_name};Initial Catalog=@{linkedService().par_framework_db_name};User ID=cs_admin",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "AzureKeyVault",
					"type": "LinkedServiceReference",
					"parameters": {
						"KeyVaultService": {
							"value": "@linkedService().KeyVaultService",
							"type": "Expression"
						}
					}
				},
				"secretName": {
					"value": "@linkedService().par_secret_name",
					"type": "Expression"
				}
		}
	}
}